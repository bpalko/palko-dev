---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="blog-post">
    <header>
      <a href="/blog" class="back-link">‚Üê Back to Blog</a>
      <h1>{frontmatter.title}</h1>
      <p class="date">{frontmatter.pubDate}</p>
      {frontmatter.tags && (
        <div class="tags">
          {frontmatter.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    color: #6cb4ff;
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .back-link:hover {
    text-decoration: underline;
    color: #99ccff;
  }

  header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    line-height: 1.4;
    color: white;
  }

  .date {
    color: #b0b0b0;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag {
    background: #3a4654;
    padding: 0.2rem 0.6rem;
    border-radius: 3px;
    font-size: 0.85rem;
    color: #d0d0d0;
  }

  .content {
    line-height: 1.6;
    color: #e0e0e0;
  }

  .content :global(h1),
  .content :global(h2) {
    font-size: 1.3rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    color: white;
  }

  .content :global(h3) {
    font-size: 1.15rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: white;
  }

  .content :global(p) {
    margin-bottom: 1rem;
    color: #e0e0e0;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1rem;
    margin-left: 1.5rem;
    color: #e0e0e0;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(strong) {
    font-weight: 600;
    color: white;
  }

  .content :global(code) {
    background: #2a3542;
    color: #99ccff;
    padding: 0.15rem 0.35rem;
    border-radius: 2px;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: #0d1117;
    color: #e6edf3;
    padding: 1rem;
    border-radius: 3px;
    overflow-x: auto;
    margin-bottom: 1rem;
    border: 1px solid #3a4654;
  }

  .content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
  }

  .content :global(blockquote) {
    border-left: 3px solid #6cb4ff;
    padding-left: 1rem;
    margin: 1rem 0;
    font-style: italic;
    color: #b0b0b0;
  }

  .content :global(a) {
    color: #6cb4ff;
    text-decoration: none;
  }

  .content :global(a:hover) {
    text-decoration: underline;
    color: #99ccff;
  }
</style>
