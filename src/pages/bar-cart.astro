---
import BaseLayout from '../layouts/BaseLayout.astro';
import { barCart } from '../data/barCart';

// Group booze by status
const current = barCart.filter((booze) => booze.status === 'current');
const finished = barCart.filter((booze) => booze.status === 'finished');
const wishlist = barCart.filter((booze) => booze.status === 'wishlist');

// Helper function to render star rating
function renderStars(rating: number | undefined) {
  if (!rating) return '';
  return 'â˜…'.repeat(rating) + 'â˜†'.repeat(5 - rating);
}
---

<BaseLayout title="Bar Cart">
  <h1>Bar Cart</h1>
  <p class="subtitle">The booze currently on the bar cart. You'll find just about anything.</p>

  {current.length > 0 && (
    <section>
      <h2>Current Bottles</h2>
      <div class="booze-grid">
        {current.map((booze) => (
          <div class="booze-card">
            <div class="booze-image">
              {booze.imageUrl ? (
                <img src={booze.imageUrl} alt={`Bottle of ${booze.name}`} />
              ) : (
                <div class="no-image">
                  <span>ðŸ¥ƒ</span>
                </div>
              )}
            </div>
            <div class="booze-info">
              <h3 class="booze-name">{booze.name}</h3>
              <p class="booze-meta">
                <span class="booze-type">{booze.type}</span>
                {booze.age && <span> â€¢ {booze.age}</span>}
                {booze.proof && <span> â€¢ {booze.proof} Proof</span>}
              </p>
              <p class="booze-distillery">{booze.distillery}</p>
              {booze.rating && (
                <p class="booze-rating" title={`${booze.rating} out of 5`}>
                  {renderStars(booze.rating)}
                </p>
              )}
              {booze.notes && <p class="booze-notes">{booze.notes}</p>}
            </div>
          </div>
        ))}
      </div>
    </section>
  )}

  {finished.length > 0 && (
    <section>
      <h2>Finished Bottles</h2>
      <div class="booze-grid">
        {finished.map((booze) => (
          <div class="booze-card">
            <div class="booze-image">
              {booze.imageUrl ? (
                <img src={booze.imageUrl} alt={`Bottle of ${booze.name}`} />
              ) : (
                <div class="no-image">
