---
import BaseLayout from '../../layouts/BaseLayout.astro';

interface BlogPost {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags?: string[];
  };
  url?: string;
}

// Get all blog posts
const posts = await Astro.glob<BlogPost>('./*.md');

// Sort by date (newest first)
const sortedPosts = posts.sort((a: BlogPost, b: BlogPost) => {
  const dateA = new Date(a.frontmatter.pubDate);
  const dateB = new Date(b.frontmatter.pubDate);
  return dateB.getTime() - dateA.getTime();
});
---

<BaseLayout title="Blog">
  <div class="blog-header">
    <h1>Blog</h1>
    <p class="subtitle">Thoughts, tutorials, and things I'm learning</p>
  </div>

  <div class="posts">
    {sortedPosts.map((post) => (
      <article class="post">
        <time class="date">{post.frontmatter.pubDate}</time>
        <h2><a href={post.url}>{post.frontmatter.title}</a></h2>
        <p class="excerpt">{post.frontmatter.description}</p>
        <a href={post.url} class="read-more">Read more</a>
      </article>
    ))}
  </div>
</BaseLayout>

<style>
  .blog-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: white;
  }

  .subtitle {
    color: #b0b0b0;
    font-size: 1rem;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .post {
    border-top: 1px solid #3a4654;
    padding-top: 2rem;
  }

  .post:first-child {
    border-top: none;
    padding-top: 0;
  }

  .date {
    display: block;
    font-size: 0.875rem;
    color: #b0b0b0;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  h2 a {
    color: white;
    text-decoration: none;
  }

  h2 a:hover {
    color: #99ccff;
  }

  .excerpt {
    color: #d0d0d0;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .read-more {
    display: inline-block;
    background: #6cb4ff;
    color: #1D2935;
    padding: 0.5rem 1.25rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: background 0.2s;
  }

  .read-more:hover {
    background: #99ccff;
  }
</style>
